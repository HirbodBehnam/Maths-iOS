<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maths.PrimeCheck" Title="Prime Checker">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Detects if a number is prime or not" HorizontalTextAlignment="Center" x:Name="Info"/>
            <Entry HorizontalOptions="FillAndExpand" Keyboard="Numeric"
                   Placeholder="Enter number" x:Name="InputEntry"
                   Margin="10,10,10,0"/>
            <Button Clicked="FindBTN_Clicked" Text="Check" x:Name="CheckBTN"/>
            <Label x:Name="Result"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>